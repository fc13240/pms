<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lotut.pms.dao.mapper.ShareAppPersonMapper">
	<resultMap type="ShareAppPerson" id="SharedAppPersonResultMap">
		<association property="shareBy" resultMap="com.lotut.pms.dao.mapper.UserMapper.UserResultMap" />
		<association property="appPerson" javaType="CommonAppPerson">
			<id property="appPersonId" column="app_person_id"/>
			<result property="type" column="type"/>
			<result property="name" column="name"/>
			<result property="id_number" column="peopleNumber"/>
		</association>
	</resultMap>
	
	
	
	<insert id="insertUserAppPersons" parameterType="list">
		replace into user_app_person(user, app_person) 
		values
		<foreach item="userAppPersonRecord" collection="list" separator=",">
			(#{userAppPersonRecord.user}, #{userAppPersonRecord.appPerson})
		</foreach>
	</insert>	
	
	<insert id="insertShareAppPersons" parameterType="list">
		replace into share_app_persons(app_person, share_by, share_to) 
		values
		<foreach item="shareRecord" collection="list" separator=",">
			(#{shareRecord.appPerson}, #{shareRecord.shareBy}, #{shareRecord.shareTo})
		</foreach>
	</insert>
	
</mapper>